<?xml version="1.0"?>

<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimaryDefault</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDefault</item>
        <item name="colorAccent">@color/colorAccentDefault</item>
        <item name="android:navigationBarColor">@color/colorNavBarDefault</item>
        <item name="colorBackgroundFloating">@color/colorPrimaryLightDefault</item>

    </style>

    <!-- Dark theme -->
    <style name="AppThemeDark" parent="Theme.AppCompat">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDark</item>
        <item name="colorAccent">@color/colorAccentDark</item>
        <item name="colorBackgroundFloating">@color/colorPrimaryDarkLight</item>

    </style>

    <!-- Pastel theme -->
    <style name="AppThemePastel" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimaryPastel</item>
        <item name="colorPrimaryDark">@color/colorPrimaryPastelDark</item>
        <item name="colorAccent">@color/colorAccentPastel</item>
        <item name="android:navigationBarColor">@color/colorNavBarPastel</item>
        <item name="colorBackgroundFloating">@color/colorPrimaryPastelLight</item>
    </style>

    <!--Inverse theme-->
    <style name="AppThemeInverse" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimaryInv</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkInv</item>
        <item name="colorAccent">@color/colorAccentInverse</item>
        <item name="android:navigationBarColor">@color/colorNavBarInverse</item>
        <item name="colorBackgroundFloating">@color/colorPrimaryLightInv</item>
        
    </style>

    <!--Aqua theme-->
    <style name="AppThemeAqua" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimaryAqua</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkAqua</item>
        <item name="colorAccent">@color/colorAccentAqua</item>
        <item name="android:navigationBarColor">@color/colorNavBarAqua</item>
        <item name="colorBackgroundFloating">@color/colorPrimaryLightAqua</item>
    </style>

    <!--Coral Theme-->
    <style name="AppThemeCoral" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimaryCoral</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkCoral</item>
        <item name="colorAccent">@color/colorAccentCoral</item>
        <item name="android:navigationBarColor">@color/colorNavBarCoral</item>
        <item name="colorBackgroundFloating">@color/colorPrimaryLightCoral</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
